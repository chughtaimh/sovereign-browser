{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sovereign Browser",
  "version": "0.1.0",
  "identifier": "com.sovereign.browser",
  "build": {
    "frontendDist": "../ui",
    "beforeDevCommand": "echo skipping",
    "beforeBuildCommand": "echo skipping"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sovereign Browser",
        "label": "main",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/32x32.png"
    ]
  }
}